pipeline {
    agent any

    tools {
        nodejs "node16" // NodeJS installed in Jenkins Global Tools
    }

    environment {
        DIST_DIR = "dist\\apps"
        IIS_DEPLOY = "C:\\inetpub\\wwwroot\\admin"
    }

    triggers {
        pollSCM('* * * * *') // Poll Git every minute (or use GitHub webhook)
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/merlinpratheesh/jenkinsAdmin.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build App') {
            steps {
                bat 'npx nx build admin --configuration=production'
            }
        }

        stage('Clean IIS Folder') {
            steps {
                bat """
                echo Cleaning IIS folder...
                if exist %IIS_DEPLOY% rmdir /S /Q %IIS_DEPLOY%
                mkdir %IIS_DEPLOY%
                """
            }
        }

        stage('Deploy to IIS') {
            steps {
                bat """
                echo Deploying to IIS...
                xcopy /E /I /Y %DIST_DIR%\\admin\\* %IIS_DEPLOY%\\

                echo Restarting IIS App Pool...
                powershell -Command "Restart-WebAppPool -Name 'DefaultAppPool'"
                """
            }
        }
    }

    post {
        success {
            echo "✅ Build & Deploy Successful! Visit http://localhost:8000/"
        }
        failure {
            echo "❌ Build Failed. Check logs."
        }
    }
}
